<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/item_layout_list_margin"
  app:cardCornerRadius="@dimen/item_layout_list_margin">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/poster_image_view"
      android:layout_width="0dp"
      android:layout_height="150dp"
      android:scaleType="fitXY"
      android:layout_marginEnd="4dp"
      tools:src="@drawable/no_image"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="@id/guideline_start"
      tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintGuide_percent="0.25"
      app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_text_start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintGuide_percent="0.05"
      app:layout_constraintEnd_toEndOf="parent" />

    <TextView
      android:id="@+id/tv_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="8dp"
      android:textColor="@color/colorAccent"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      tools:text="Star Wars: The empire strikes back (1988)"
      app:layout_constraintStart_toEndOf="@+id/guideline_start"
      app:layout_constraintEnd_toStartOf="@id/inc_movie_rating"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tv_release_date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="8dp"
      tools:text="1989"
      android:visibility="gone"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
      app:layout_constraintStart_toEndOf="@+id/poster_image_view"
      app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
      android:id="@+id/tv_genres"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
      tools:text="action, drama, space opera"
      app:layout_constraintStart_toEndOf="@+id/guideline_start"
      app:layout_constraintTop_toBottomOf="@+id/tv_title"
      app:layout_constraintBottom_toTopOf="@id/in_history"
      app:layout_constraintEnd_toStartOf="@id/inc_movie_rating" />

    <include
      android:id="@+id/inc_movie_rating"
      layout="@layout/layout_movie_rating"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginStart="4dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/guideline_end" />

    <TextView
      android:id="@+id/votes_text_view"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:gravity="center"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
      android:visibility="gone"
      app:layout_constraintTop_toBottomOf="@+id/inc_movie_rating"
      app:layout_constraintEnd_toEndOf="@+id/inc_movie_rating"
      app:layout_constraintStart_toStartOf="@+id/inc_movie_rating" />


    <CheckBox
      android:id="@+id/in_history"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_margin="8dp"
      android:gravity="center_vertical"
      android:button="@drawable/item_history_selector"
      app:layout_constraintTop_toBottomOf="@id/tv_genres"
      app:layout_constraintStart_toEndOf="@id/guideline_start"
      app:layout_constraintBottom_toBottomOf="@id/poster_image_view" />

    <CheckBox
      android:id="@+id/in_wish_list"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_margin="8dp"
      android:button="@drawable/item_fav_selector"
      android:gravity="center_vertical"
      app:layout_constraintBottom_toBottomOf="@+id/in_history"
      app:layout_constraintStart_toEndOf="@id/in_history"
      app:layout_constraintTop_toTopOf="@+id/in_history" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintGuide_percent="0.9"
      app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_text_end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintGuide_percent="0.95"
      app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
      android:id="@+id/layout_controls"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/colorPrimary"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="@id/guideline_end"
      app:layout_constraintBottom_toBottomOf="@id/poster_image_view"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_drag_handle"
        android:layout_weight="1"
        android:layout_gravity="top|center"
        tools:ignore="ContentDescription" />

      <CheckBox
        android:id="@+id/more_information_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_weight="1"
        android:button="@drawable/more_information_check_box_custom" />
    </LinearLayout>

    <TextView
      android:id="@+id/tv_overview"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@id/guideline_text_end"
      app:layout_constraintStart_toStartOf="@id/guideline_text_start"
      app:layout_constraintTop_toBottomOf="@id/poster_image_view" />

    <!--
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:id="@+id/movie_posters_recycler_view"/>
    !-->


  </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>