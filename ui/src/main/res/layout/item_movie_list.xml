<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/item_layout_list_margin"
        android:layout_margin="@dimen/item_layout_list_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_item_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/poster_image_view"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintVertical_bias="0.0"
                    android:layout_marginEnd="8dp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintWidth_percent="0.5"
                    android:id="@+id/movie_title_text_view"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/poster_image_view"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_date_text_view"
                    card_view:layout_constraintWidth_percent="0.5"
                    card_view:layout_constraintStart_toEndOf="@+id/poster_image_view"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    card_view:layout_constraintTop_toBottomOf="@+id/movie_title_text_view"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_genre_text_view"
                    card_view:layout_constraintWidth_percent="0.5"
                    android:layout_marginTop="8dp"
                    card_view:layout_constraintTop_toBottomOf="@+id/release_date_text_view"
                    card_view:layout_constraintStart_toEndOf="@+id/poster_image_view"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"/>
            <include
                    layout="@layout/layout_movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintEnd_toStartOf="@id/layout_controls"
                    card_view:layout_constraintBottom_toBottomOf="@id/description_text_view"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/votes_text_view"
                    android:visibility="gone"
                    card_view:layout_constraintTop_toBottomOf="@id/layout_movie_rating"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    card_view:layout_constraintBottom_toTopOf="@id/description_text_view"
                    card_view:layout_constraintStart_toStartOf="@id/layout_movie_rating"
                    card_view:layout_constraintEnd_toEndOf="@id/layout_movie_rating"
            />

            <LinearLayout
                    android:id="@+id/layout_controls"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    card_view:layout_constraintHeight_percent="1"
                    card_view:layout_constraintWidth_percent="0.25"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" tools:layout_height="0dp">

                <CheckBox
                        android:layout_width="@dimen/check_box_size"
                        android:layout_height="@dimen/check_box_size"
                        android:id="@+id/check_box_in_history"
                        android:button="@drawable/looked_check_box_custom"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                />

                <CheckBox
                        android:layout_width="@dimen/check_box_size"
                        android:layout_height="@dimen/check_box_size"
                        android:id="@+id/in_wish_list"
                        android:button="@drawable/in_wish_list_custom"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                />
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/more_information_check_box"
                        android:layout_gravity="center"
                        android:button="@drawable/more_information_check_box_custom"
                        android:layout_weight="1"
                />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/description_text_view"
                    card_view:layout_constraintTop_toBottomOf="@id/poster_image_view"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    android:visibility="visible"
            />
            <!--
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:id="@+id/movie_posters_recycler_view"/>
            !-->
            <ImageView
                    android:id="@+id/drag_handle"
                    card_view:layout_constraintBottom_toTopOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    tools:ignore="ContentDescription"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>