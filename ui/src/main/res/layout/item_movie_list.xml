<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/item_layout_list_margin"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/item_layout_list_margin"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/poster_image_view"
                android:layout_weight="6"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3"
        >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_title_text_view"
                    android:text="Название"
                    android:textColor="@color/colorAccent"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_date_text_view"
                    android:text="@string/release"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_genre_text_view"
                    android:text="Жанр:"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="6"
        >

            <CheckBox
                    android:layout_width="@dimen/check_box_size"
                    android:layout_height="@dimen/check_box_size"
                    android:id="@+id/looked_check_box"
                    android:layout_gravity="center"
            />

            <CheckBox
                    android:layout_width="@dimen/check_box_size"
                    android:layout_height="@dimen/check_box_size"
                    android:id="@+id/in_wish_list"
                    android:layout_gravity="center"
            />
        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/more_information_layout"

                android:layout_weight="6"
        >
            <CheckBox
                    android:layout_width="@dimen/check_box_size"
                    android:layout_height="@dimen/check_box_size"
                    android:id="@+id/more_information_check_box"
                    android:layout_gravity="center"

            />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/producer_text_view"
                android:text="Режиссер"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actors_text_view"
                android:text="Актеры"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_text_view"
                android:text="Описание"
        />
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/check_box_size"
                android:orientation="horizontal"
                android:id="@+id/movie_posters_recycler_view"
        >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>




