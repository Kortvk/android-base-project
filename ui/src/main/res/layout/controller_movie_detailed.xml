<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/layout_detailed_root"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

        <TextView
          android:id="@+id/tv_movie_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:gravity="center"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
          app:layout_constraintBottom_toTopOf="@id/tv_movie_year"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="Start Wars: The Empire Strikes Back" />

        <TextView
          android:id="@+id/tv_movie_year"
          style="@style/TextAppearance.MaterialComponents.Body1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:textAlignment="center"
          app:layout_constraintBottom_toTopOf="@id/view_movie_info_divider"
          app:layout_constraintEnd_toStartOf="@id/tv_movie_runtime"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
          tools:text="1988" />

        <TextView
          android:id="@+id/tv_movie_runtime"
          style="@style/TextAppearance.MaterialComponents.Body1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:textAlignment="center"
          app:layout_constraintBottom_toTopOf="@id/view_movie_info_divider"
          app:layout_constraintEnd_toStartOf="@id/tv_movie_status"
          app:layout_constraintStart_toEndOf="@id/tv_movie_year"
          app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
          tools:text="240" />

        <TextView
          android:id="@+id/tv_movie_status"
          style="@style/TextAppearance.MaterialComponents.Body1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:textAlignment="center"
          app:layout_constraintBottom_toTopOf="@id/view_movie_info_divider"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/tv_movie_runtime"
          app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
          tools:text="Released" />

        <View
          android:id="@+id/view_movie_info_divider"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_margin="8dp"
          android:background="@color/colorBackground"
          app:layout_constraintBottom_toTopOf="@id/iv_movie_poster"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_movie_year" />

        <ImageView
          android:id="@+id/iv_movie_poster"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:scaleType="centerInside"
          app:layout_constraintBottom_toTopOf="@id/keywords_group"
          app:layout_constraintEnd_toStartOf="@id/tv_movie_description"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/view_movie_info_divider"
          tools:ignore="ContentDescription"
          tools:src="@drawable/no_image" />

        <com.codesgood.views.JustifiedTextView
          android:id="@+id/tv_movie_description"
          style="@style/TextAppearance.MaterialComponents.Body2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:layout_constraintBottom_toTopOf="@id/keywords_group"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
          app:layout_constraintTop_toBottomOf="@id/view_movie_info_divider"
          tools:text="The story follows Carol Danvers as she becomes one of the universeâ€™s most powerful heroes when Earth is caught in the middle of a galactic war between two alien races. Set in the 1990s, Captain Marvel is an all-new adventure from a previously unseen period in the history of the Marvel Cinematic Universe." />

        <androidx.constraintlayout.widget.Barrier
          android:id="@+id/barrier_description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="4dp"
          android:orientation="horizontal"
          app:barrierDirection="bottom"
          app:constraint_referenced_ids="iv_movie_poster,tv_movie_description" />

        <com.google.android.flexbox.FlexboxLayout
          android:id="@+id/keywords_group"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="4dp"
          app:flexWrap="wrap"
          app:alignItems="flex_start"
          app:alignContent="flex_start"
          app:justifyContent="center"
          android:orientation="horizontal"
          app:layout_constraintBottom_toTopOf="@id/inc_movie_rating"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/barrier_description" />

        <include
          android:id="@+id/inc_movie_rating"
          layout="@layout/layout_movie_rating"
          android:layout_width="64dp"
          android:layout_height="64dp"
          android:layout_margin="8dp"
          app:layout_constraintBottom_toTopOf="@id/view_cast_divider"
          app:layout_constraintEnd_toStartOf="@id/checkbox_movie_fav"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/keywords_group" />

        <CheckBox
          android:id="@+id/checkbox_movie_fav"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleX="2"
          android:scaleY="2"
          android:layout_margin="8dp"
          android:scaleType="fitXY"
          android:gravity="center"
          android:button="@drawable/item_fav_selector"
          app:layout_constraintBottom_toTopOf="@id/view_cast_divider"
          app:layout_constraintEnd_toStartOf="@id/checkbox_movie_history"
          app:layout_constraintStart_toEndOf="@id/inc_movie_rating"
          app:layout_constraintTop_toBottomOf="@id/keywords_group" />

        <CheckBox
          android:id="@+id/checkbox_movie_history"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleX="2"
          android:scaleY="2"
          android:layout_margin="8dp"
          android:scaleType="fitXY"
          android:gravity="center"
          android:button="@drawable/item_history_selector"
          app:layout_constraintBottom_toTopOf="@id/view_cast_divider"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/checkbox_movie_fav"
          app:layout_constraintTop_toBottomOf="@id/keywords_group" />

        <View
          android:id="@+id/view_cast_divider"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_margin="8dp"
          android:background="@color/colorBackground"
          app:layout_constraintBottom_toTopOf="@id/tv_cast_headline"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/inc_movie_rating" />

        <TextView
          android:id="@+id/tv_cast_headline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:textAlignment="center"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
          android:text="@string/cast_hint"
          app:layout_constraintBottom_toTopOf="@id/recycler_cast"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/view_cast_divider" />

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycler_cast"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:orientation="horizontal"
          app:layout_constraintBottom_toTopOf="@id/tv_directed_by"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_cast_headline" />

        <TextView
          android:id="@+id/tv_directed_by"
          style="@style/TextAppearance.MaterialComponents.Body1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:layout_constraintBottom_toTopOf="@id/tv_written_by"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/recycler_cast"
          tools:text="Directed by director" />

        <TextView
          android:id="@+id/tv_written_by"
          style="@style/TextAppearance.MaterialComponents.Body1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_directed_by"
          tools:text="Written by some writers" />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <com.google.android.material.appbar.CollapsingToolbarLayout
      android:id="@+id/collapsing_toolbar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:contentScrim="?attr/colorPrimary"
      app:layout_scrollFlags="scroll|exitUntilCollapsed">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:id="@+id/toolbar_image"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:fitsSystemWindows="true"
          android:scaleType="centerCrop"
          app:layout_collapseMode="parallax"
          app:layout_collapseParallaxMultiplier="0.7"
          tools:ignore="ContentDescription" />

        <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/gradient_bg" />

        <TextView
          android:id="@+id/tv_movie_tagline"
          style="@style/TextAppearance.MaterialComponents.Headline5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center"
          android:layout_margin="16dp" />
      </FrameLayout>


    </com.google.android.material.appbar.CollapsingToolbarLayout>

  </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


